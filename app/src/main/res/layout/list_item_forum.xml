<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_list_item_forum"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_list_item_forum_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_forum_item_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/tv_forum_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="李阳屌大"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/img_forum_item_avatar"
            app:layout_constraintTop_toTopOf="@+id/img_forum_item_avatar" />

        <TextView
            android:id="@+id/tv_forum_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="03-25"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_forum_item_avatar"
            app:layout_constraintStart_toEndOf="@+id/img_forum_item_avatar" />

        <TextView
            android:id="@+id/tv_forum_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="李阳的屌真的大"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_forum_item_avatar" />

        <ImageView
            android:id="@+id/img_forum_item_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forum_item_comment"
            app:layout_constraintEnd_toStartOf="@+id/tv_forum_item_comment"
            app:layout_constraintTop_toTopOf="@+id/tv_forum_item_comment"
            app:srcCompat="@drawable/ic_post_comment" />

        <TextView
            android:id="@+id/tv_forum_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_forum_item_content" />

        <ImageView
            android:id="@+id/img_forum_item_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forum_item_view"
            app:layout_constraintEnd_toStartOf="@+id/tv_forum_item_view"
            app:layout_constraintTop_toTopOf="@+id/tv_forum_item_view"
            app:srcCompat="@drawable/ic_post_view" />

        <TextView
            android:id="@+id/tv_forum_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="114514"
            app:layout_constraintBottom_toBottomOf="@+id/img_forum_item_comment"
            app:layout_constraintEnd_toStartOf="@+id/img_forum_item_comment"
            app:layout_constraintTop_toTopOf="@+id/img_forum_item_comment" />

        <TextView
            android:id="@+id/tv_forum_item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:text="为啥李阳屌大呢"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_forum_item_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>